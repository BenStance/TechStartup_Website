# Application Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DATABASE_PATH=./dev.db
DB_SYNCHRONIZE=true
DB_LOGGING=true

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here
